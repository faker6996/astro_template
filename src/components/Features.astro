	{
		category: 'Frontend',
		items: ['React.js', 'Next.js 15', 'TypeScript', 'TailwindCSS', 'HTML5/CSS3'],
		icon: 'üíª'
	},
	{
		category: 'Backend',
		items: ['.NET 9', 'C#', 'ASP.NET Core', 'RESTful APIs', 'Clean Architecture'],
		icon: '‚öôÔ∏è'
	},
	{
		category: 'Database',
		items: ['PostgreSQL', 'SQL Server', 'Redis', 'Oracle', 'MongoDB'],
		icon: 'üóÑÔ∏è'
	},
	{
		category: 'Creative & 3D',
		items: ['Three.js', 'WebGL', '3D Projection', 'Creative Coding', 'GSAP'],
		icon: 'üé®'
	}
];

const projects = [
	{
		title: '@underverse-ui/underverse',
		description: 'A comprehensive UI library available on NPM. Designed for modern web applications with focus on performance and aesthetics.',
		tags: ['NPM', 'UI Library', 'TypeScript'],
		link: 'https://www.npmjs.com/package/@underverse-ui/underverse?activeTab=readme'
	},
	{
		title: 'Flower Shop E-commerce',
		description: 'A modern e-commerce platform built with Next.js 15 App Router, featuring real-time updates, comprehensive API documentation, and a robust CI/CD pipeline.',
		tags: ['Next.js 15', 'React 19', 'PostgreSQL', 'Docker', 'Redis'],
		link: 'https://jojoflowers.vn/'
	},

	{
		title: 'AI Studio',
		description: 'A freelance platform for crowd workers to process point cloud images and 3D data.',
		tags: ['Java Spring Boot', 'JSP', 'jQuery', 'HTML/CSS'],
		link: 'https://ai-studio.co.kr'
	},
	{
		title: 'Flex Collection',
		description: 'Internal tool for LpBank employees. Managed data collection and processing workflows.',
		tags: ['ReactJS', '.NET 5', 'Oracle'],
		link: '#'
	}
];
---

<section id="features" class="py-20 bg-slate-900 relative">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		
		<!-- Skills Section -->
		<div class="mb-24">
			<div class="text-center mb-16">
				<h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
					Technical Expertise
				</h2>
				<p class="text-xl text-gray-400 max-w-2xl mx-auto">
					A solid foundation in both frontend and backend technologies.
				</p>
			</div>

			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
				{skills.map(skill => (
					<div class="p-6 rounded-2xl bg-white/5 border border-white/10 hover:border-purple-500/50 transition-all duration-300 hover:-translate-y-1">
						<div class="text-4xl mb-4">{skill.icon}</div>
						<h3 class="text-xl font-bold text-white mb-4">{skill.category}</h3>
						<ul class="space-y-2">
							{skill.items.map(item => (
								<li class="text-gray-400 flex items-center">
									<span class="w-1.5 h-1.5 bg-purple-500 rounded-full mr-2"></span>
									{item}
								</li>
							))}
						</ul>
					</div>
				))}
			</div>
		</div>

		<!-- Projects Section -->
		<div id="projects">
			<div class="text-center mb-16">
				<h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
					Featured Projects
				</h2>
				<p class="text-xl text-gray-400 max-w-2xl mx-auto">
					Highlights of my recent work and contributions.
				</p>
			</div>

			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8" id="projects-grid">
				{projects.map((project, index) => (
					<div class={`group relative p-8 rounded-2xl bg-gradient-to-br from-white/5 to-white/0 border border-white/10 hover:border-purple-500/50 transition-all duration-300 hover:-translate-y-1 hover:shadow-2xl hover:shadow-purple-500/20 flex flex-col h-full ${index >= 3 ? 'hidden' : ''} project-item`}>
						<div class="absolute inset-0 bg-gradient-to-br from-purple-600/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-2xl"></div>
						
						<div class="relative z-10 flex-grow">
							<h3 class="text-xl font-bold text-white mb-3 group-hover:text-purple-300 transition-colors">
								{project.title}
							</h3>
							
							<p class="text-gray-400 leading-relaxed mb-6">
								{project.description}
							</p>

							<div class="flex flex-wrap gap-2 mb-6">
								{project.tags.map(tag => (
									<span class="px-3 py-1 rounded-full bg-white/10 text-xs text-gray-300 border border-white/5">
										{tag}
									</span>
								))}
							</div>
						</div>

						<div class="relative z-10 mt-auto">
							<a href={project.link} target="_blank" rel="noopener noreferrer" class="inline-flex items-center text-purple-400 hover:text-purple-300 font-medium transition-colors">
								View Project
								<svg class="w-4 h-4 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
								</svg>
							</a>
						</div>
					</div>
				))}
			</div>

			<div class="mt-12 text-center">
				<a href="#" id="show-more-btn" class="inline-flex items-center px-8 py-3 rounded-full border border-purple-500/30 bg-purple-500/10 text-purple-300 font-medium hover:bg-purple-500/20 transition-all duration-300">
					Show More
					<svg class="w-5 h-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
					</svg>
				</a>
			</div>
		</div>
	</div>
</section>

<script>
	const showMoreBtn = document.getElementById('show-more-btn');
	const hiddenProjects = document.querySelectorAll('.project-item.hidden');

	if (showMoreBtn) {
		showMoreBtn.addEventListener('click', (e) => {
			e.preventDefault();
			hiddenProjects.forEach(project => {
				project.classList.remove('hidden');
			});
			showMoreBtn.style.display = 'none';
		});
	}
</script>
