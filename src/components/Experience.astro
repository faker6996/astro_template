---
const experiences = [
	{
		company: 'InfiniQ Vietnam',
		position: 'Software Engineer',
		period: 'Feb 2025 - Present',
		description: 'Responsible for operating the company\'s AI labeling tool system and enhancing it with new 3D, 2D, and voxel features. Full-stack web developer role.'
	},
	{
		company: 'SOFTMART',
		position: 'Web Developer',
		period: 'Jan 2023 - Jan 2025',
		description: 'Developed and maintained 3+ web applications serving 1000+ users. Improved application performance by 30% through code optimization. Led frontend migration from legacy systems to React/TypeScript. Collaborated with cross-functional teams. Technologies: React, .NET, PostgreSQL, SignalR.'
	},
	{
		company: 'R&D MobiFone',
		position: 'Software Engineer',
		period: 'Jan 2022 - Dec 2022',
		description: 'Full-stack developer role involving research and development of new software solutions.'
	},
	{
		company: 'FPT Software Academy',
		position: 'Intern Web',
		period: 'Aug 2021 - Sep 2021',
		description: 'Introduction to Web Programming and foundational software development skills.'
	}
];
---

<section id="experience" class="py-20 bg-slate-900 relative overflow-hidden">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
		<div class="text-center mb-16">
			<h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
				Work Experience
			</h2>
			<p class="text-xl text-gray-400 max-w-2xl mx-auto">
				My professional journey and career milestones.
			</p>
		</div>

		<div class="relative max-w-4xl mx-auto">
			<!-- Vertical Line -->
			<div class="absolute left-1/2 transform -translate-x-1/2 w-0.5 h-full bg-gradient-to-b from-purple-500/50 via-purple-500/20 to-transparent"></div>

			<div class="space-y-12">
				{experiences.map((exp, index) => (
					<div class={`relative flex items-center justify-between ${index % 2 === 0 ? 'flex-row-reverse' : ''}`}>
						
						<!-- Content -->
						<div class="w-5/12">
							<div class={`p-6 rounded-2xl bg-white/5 border border-white/10 hover:border-purple-500/50 transition-all duration-300 hover:-translate-y-1 ${index % 2 === 0 ? 'text-left' : 'text-right'}`}>
								<span class="inline-block px-3 py-1 mb-3 text-xs font-medium text-purple-300 bg-purple-500/10 rounded-full border border-purple-500/20">
									{exp.period}
								</span>
								<h3 class="text-xl font-bold text-white mb-1">{exp.company}</h3>
								<h4 class="text-lg text-purple-400 mb-3">{exp.position}</h4>
								<p class="text-gray-400 text-sm leading-relaxed">
									{exp.description}
								</p>
							</div>
						</div>

						<!-- Dot -->
						<div class="absolute left-1/2 transform -translate-x-1/2 w-4 h-4 bg-purple-500 rounded-full border-4 border-slate-900 shadow-[0_0_10px_rgba(168,85,247,0.5)] z-10"></div>

						<!-- Empty Space for Layout -->
						<div class="w-5/12"></div>
					</div>
				))}
			</div>
		</div>
	</div>
</section>
