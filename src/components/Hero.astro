<section class="relative pt-32 pb-20 lg:pt-48 lg:pb-32 overflow-hidden bg-gray-50 dark:bg-slate-900 transition-colors duration-300">
	<!-- Background Effects -->
	<div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-full z-0 pointer-events-none">
		<div class="absolute top-20 left-1/4 w-72 h-72 bg-purple-500/20 dark:bg-purple-500/30 rounded-full blur-3xl mix-blend-screen animate-blob"></div>
		<div class="absolute top-40 right-1/4 w-72 h-72 bg-pink-500/20 dark:bg-pink-500/30 rounded-full blur-3xl mix-blend-screen animate-blob animation-delay-2000"></div>
		<div class="absolute -bottom-8 left-1/2 w-72 h-72 bg-blue-500/20 dark:bg-blue-500/30 rounded-full blur-3xl mix-blend-screen animate-blob animation-delay-4000"></div>
	</div>

	<div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
			<!-- Left Column: Content -->
			<div class="text-left">
				<div class="fade-up inline-flex items-center px-3 py-1 rounded-full border border-purple-500/30 bg-purple-500/10 text-purple-600 dark:text-purple-300 text-sm font-medium mb-8 backdrop-blur-sm">
					<span class="flex h-2 w-2 rounded-full bg-purple-500 dark:bg-purple-400 mr-2"></span>
					Open to Work
				</div>
				
				<h1 class="fade-up delay-100 text-5xl md:text-7xl font-extrabold tracking-tight text-slate-900 dark:text-white mb-6">
					Hi, I'm <br />
					<span class="text-transparent bg-clip-text bg-gradient-to-r from-purple-600 via-pink-600 to-red-600 dark:from-purple-400 dark:via-pink-500 dark:to-red-500">
						Bach Tran
					</span>
				</h1>
				
				<p class="fade-up delay-200 text-2xl md:text-3xl font-bold text-gray-700 dark:text-gray-200 mb-6">
					Senior Full-stack Web Developer
				</p>

				<p class="fade-up delay-300 mt-4 text-xl text-gray-600 dark:text-gray-400 mb-10 max-w-lg">
					Specializing in modern web technologies like Next.js, .NET, and Cloud Architecture.
					Creator of <code class="text-purple-600 dark:text-purple-400 bg-purple-100 dark:bg-purple-500/10 px-2 py-1 rounded">@underverse-ui/underverse</code>.
				</p>
				
				<div class="fade-up delay-300 flex flex-col sm:flex-row gap-4">
					<a href="#projects" class="px-8 py-4 rounded-full bg-slate-900 dark:bg-white text-white dark:text-slate-900 font-bold text-lg hover:bg-slate-800 dark:hover:bg-gray-100 transition-all shadow-lg hover:shadow-xl text-center">
						View Work
					</a>
					<a href="#contact" class="px-8 py-4 rounded-full border border-gray-200 dark:border-white/20 bg-white/50 dark:bg-white/5 text-slate-900 dark:text-white font-bold text-lg hover:bg-white/80 dark:hover:bg-white/10 backdrop-blur-sm transition-all text-center">
						Contact Me
					</a>
				</div>

				<!-- Stats -->
				<div class="fade-up delay-300 mt-12 pt-8 border-t border-gray-200 dark:border-white/10 grid grid-cols-3 gap-8">
					<div>
						<div class="text-2xl font-bold text-slate-900 dark:text-white">5+</div>
						<div class="text-sm text-gray-500">Years Exp</div>
					</div>
					<div>
						<div class="text-2xl font-bold text-slate-900 dark:text-white">20+</div>
						<div class="text-sm text-gray-500">Projects</div>
					</div>
					<div>
						<div class="text-2xl font-bold text-slate-900 dark:text-white">100%</div>
						<div class="text-sm text-gray-500">Commitment</div>
					</div>
				</div>
			</div>

			<!-- Right Column: Visual -->
			<div class="fade-up delay-200 relative hidden lg:block">
				<div class="relative w-full aspect-square max-w-lg mx-auto">
					<!-- Abstract 3D Representation -->
					<div class="absolute inset-0 bg-gradient-to-br from-purple-600/20 to-blue-600/20 dark:from-purple-600/30 dark:to-blue-600/30 rounded-full blur-3xl animate-pulse"></div>
					<div class="relative z-10 w-full h-full bg-white/50 dark:bg-slate-800/50 backdrop-blur-xl rounded-3xl border border-gray-200 dark:border-white/10 p-8 shadow-2xl transform rotate-3 hover:rotate-0 transition-all duration-500">
						<div class="absolute top-4 left-4 flex space-x-2">
							<div class="w-3 h-3 rounded-full bg-red-500"></div>
							<div class="w-3 h-3 rounded-full bg-yellow-500"></div>
							<div class="w-3 h-3 rounded-full bg-green-500"></div>
						</div>
						<div class="mt-8 space-y-4">
							<div class="h-4 bg-gray-200 dark:bg-white/10 rounded w-3/4 animate-pulse"></div>
							<div class="h-4 bg-gray-200 dark:bg-white/10 rounded w-1/2 animate-pulse"></div>
							<div class="h-32 bg-gradient-to-br from-purple-100 to-pink-100 dark:from-purple-500/20 dark:to-pink-500/20 rounded-xl mt-8 border border-gray-100 dark:border-white/5 flex items-center justify-center">
								<span class="text-4xl">üöÄ</span>
							</div>
							<div class="grid grid-cols-3 gap-4 mt-4">
								<div class="h-20 bg-gray-100 dark:bg-white/5 rounded-lg"></div>
								<div class="h-20 bg-gray-100 dark:bg-white/5 rounded-lg"></div>
								<div class="h-20 bg-gray-100 dark:bg-white/5 rounded-lg"></div>
							</div>
						</div>
					</div>
					
					<!-- Floating Elements -->
					<div class="absolute -top-10 -right-10 w-24 h-24 bg-white/80 dark:bg-slate-800/80 backdrop-blur-md rounded-2xl border border-gray-200 dark:border-white/10 flex items-center justify-center shadow-xl animate-bounce delay-700">
						<span class="text-4xl">‚öõÔ∏è</span>
					</div>
					<div class="absolute -bottom-5 -left-5 w-20 h-20 bg-white/80 dark:bg-slate-800/80 backdrop-blur-md rounded-2xl border border-gray-200 dark:border-white/10 flex items-center justify-center shadow-xl animate-bounce delay-1000">
						<span class="text-3xl">üî∑</span>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	@keyframes blob {
		0% { transform: translate(0px, 0px) scale(1); }
		33% { transform: translate(30px, -50px) scale(1.1); }
		66% { transform: translate(-20px, 20px) scale(0.9); }
		100% { transform: translate(0px, 0px) scale(1); }
	}
	.animate-blob {
		animation: blob 7s infinite;
	}
	.animation-delay-2000 {
		animation-delay: 2s;
	}
	.animation-delay-4000 {
		animation-delay: 4s;
	}
</style>
