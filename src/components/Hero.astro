<section class="relative pt-32 pb-20 lg:pt-48 lg:pb-32 overflow-hidden">
	<!-- Background Effects -->
	<div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-full z-0 pointer-events-none">
		<div class="absolute top-20 left-1/4 w-72 h-72 bg-purple-500/30 rounded-full blur-3xl mix-blend-screen animate-blob"></div>
		<div class="absolute top-40 right-1/4 w-72 h-72 bg-pink-500/30 rounded-full blur-3xl mix-blend-screen animate-blob animation-delay-2000"></div>
		<div class="absolute -bottom-8 left-1/2 w-72 h-72 bg-blue-500/30 rounded-full blur-3xl mix-blend-screen animate-blob animation-delay-4000"></div>
	</div>

	<div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
		<div class="inline-flex items-center px-3 py-1 rounded-full border border-purple-500/30 bg-purple-500/10 text-purple-300 text-sm font-medium mb-8 backdrop-blur-sm">
			<span class="flex h-2 w-2 rounded-full bg-purple-400 mr-2"></span>
			Open to Work
		</div>
		
		<h1 class="text-5xl md:text-7xl font-extrabold tracking-tight text-white mb-8">
			Hi, I'm <span class="text-transparent bg-clip-text bg-gradient-to-r from-purple-400 via-pink-500 to-red-500">Bach Tran</span>
		</h1>
		
		<p class="text-2xl md:text-3xl font-bold text-gray-200 mb-6">
			Senior Full-stack Web Developer
		</p>

		<p class="mt-4 max-w-2xl mx-auto text-xl text-gray-400 mb-10">
			Specializing in modern web technologies like Next.js, .NET, and Cloud Architecture.
			Creator of <code class="text-purple-400 bg-purple-500/10 px-2 py-1 rounded">@underverse-ui/underverse</code>.
		</p>
		
		<div class="flex flex-col sm:flex-row justify-center gap-4">
			<a href="#projects" class="px-8 py-4 rounded-full bg-white text-slate-900 font-bold text-lg hover:bg-gray-100 transition-all shadow-[0_0_20px_rgba(255,255,255,0.3)] hover:shadow-[0_0_30px_rgba(255,255,255,0.5)]">
				View Work
			</a>
			<a href="#contact" class="px-8 py-4 rounded-full border border-white/20 bg-white/5 text-white font-bold text-lg hover:bg-white/10 backdrop-blur-sm transition-all">
				Contact Me
			</a>
		</div>

		<!-- Stats or Social Proof -->
		<div class="mt-20 pt-10 border-t border-white/10 grid grid-cols-2 md:grid-cols-4 gap-8">
			<div>
				<div class="text-3xl font-bold text-white">4+</div>
				<div class="text-sm text-gray-500 mt-1">Years Experience</div>
			</div>
			<div>
				<div class="text-3xl font-bold text-white">10+</div>
				<div class="text-sm text-gray-500 mt-1">Projects</div>
			</div>
			<div>
				<div class="text-3xl font-bold text-white">100%</div>
				<div class="text-sm text-gray-500 mt-1">Commitment</div>
			</div>
			<div>
				<div class="text-3xl font-bold text-white">Full-stack</div>
				<div class="text-sm text-gray-500 mt-1">Expertise</div>
			</div>
		</div>
	</div>
</section>

<style>
	@keyframes blob {
		0% { transform: translate(0px, 0px) scale(1); }
		33% { transform: translate(30px, -50px) scale(1.1); }
		66% { transform: translate(-20px, 20px) scale(0.9); }
		100% { transform: translate(0px, 0px) scale(1); }
	}
	.animate-blob {
		animation: blob 7s infinite;
	}
	.animation-delay-2000 {
		animation-delay: 2s;
	}
	.animation-delay-4000 {
		animation-delay: 4s;
	}
</style>
